# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/chapterone

# Firebase Functions (for notifications)
# Get the URL from Firebase Console > Functions > Your function > Configuration
# Format: https://<region>-<project-id>.cloudfunctions.net
# API key is optional - only needed if you've configured your functions to require authentication
FIREBASE_FUNCTIONS_URL=https://us-central1-chapterone-ca208.cloudfunctions.net
FIREBASE_FUNCTIONS_API_KEY=

# Firebase Storage (required for hotcomics scraper)
# Option 1: Use service account key as JSON string (recommended for production)
# Get from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Copy the entire JSON and set it as a single-line string (escape quotes if needed)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}
# Option 2: Use path to service account JSON file (recommended for local development)
# GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account-key.json

# Firebase Storage Bucket (required)
# Format: <project-id>.appspot.com or <project-id>.firebasestorage.app
# Get from Firebase Console > Storage > Settings
FIREBASE_STORAGE_BUCKET=chapterone-ca208.appspot.com

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Redis (for Bull queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080


